@using CodingEvents.Models
@model List<Event>
<h1>Coding Events</h1>
<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

@if (Model.Count == 0)
{
    <p>No Events yet!</p>
}
else
{
    <p>
        <a asp-controller="Events" asp-action="Delete">Delete Events</a>
    </p>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Email</th>
        </tr>
        @foreach (var evnt in Model)
        {
            <tr>
                <td>@evnt.Id</td>
                <td>@evnt.Name</td>
                <td>@evnt.Description</td>
                <td>@evnt.ContactEmail</td>
                <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@evnt.Id">Edit Event</a></td>

            </tr>
        }
    </table>
}
